{
    "tools": [
        {
            "id": "email_search",
            "name": "email_search",
            "description": "Search and retrieve emails from Gmail with filtering capabilities",
            "category": "data_retrieval",
            "resource_dependencies": [
                {
                    "id": "gmail",
                    "name": "Gmail",
                    "description": "Google Gmail email service for searching and retrieving emails",
                    "type": "messaging",
                    "auth_config": {
                        "type": "oauth2",
                        "required_fields": [
                            {
                                "field_name": "access_token",
                                "field_type": "secret",
                                "required": true,
                                "description": "OAuth access token"
                            },
                            {
                                "field_name": "refresh_token",
                                "field_type": "secret",
                                "required": true,
                                "description": "OAuth refresh token"
                            },
                            {
                                "field_name": "token_expires_at",
                                "field_type": "string",
                                "required": true,
                                "description": "Token expiration timestamp"
                            }
                        ]
                    },
                    "connection_schema": {
                        "type": "object",
                        "description": "Gmail OAuth credentials",
                        "is_array": false,
                        "fields": {
                            "access_token": {
                                "type": "string",
                                "description": "OAuth access token",
                                "is_array": false
                            },
                            "refresh_token": {
                                "type": "string",
                                "description": "OAuth refresh token",
                                "is_array": false
                            },
                            "token_expires_at": {
                                "type": "string",
                                "description": "Token expiration timestamp",
                                "is_array": false
                            }
                        }
                    },
                    "capabilities": [
                        "search",
                        "retrieve",
                        "send",
                        "list_folders"
                    ],
                    "base_url": "https://gmail.googleapis.com",
                    "documentation_url": "https://developers.google.com/gmail/api"
                }
            ],
            "parameters": [
                {
                    "name": "query",
                    "type": "string",
                    "description": "Gmail search query (e.g., 'from:user@example.com', 'subject:meeting', 'after:2024/01/01'). Supports the same query format as the Gmail search box.",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "name": "label_ids",
                    "type": "string",
                    "is_array": true,
                    "description": "List of Gmail label IDs to search in. Messages must match ALL specified labels.",
                    "required": false,
                    "schema": {
                        "type": "string",
                        "is_array": true
                    }
                },
                {
                    "name": "max_results",
                    "type": "number",
                    "description": "Maximum number of messages to return (1-500, default: 100)",
                    "required": false,
                    "default": 100,
                    "schema": {
                        "type": "number",
                        "minimum": 1,
                        "maximum": 500
                    }
                },
                {
                    "name": "include_spam_trash",
                    "type": "boolean",
                    "description": "Include messages from SPAM and TRASH in the results",
                    "required": false,
                    "default": false,
                    "schema": {
                        "type": "boolean"
                    }
                },
                {
                    "name": "page_token",
                    "type": "string",
                    "description": "Token for retrieving the next page of results",
                    "required": false,
                    "schema": {
                        "type": "string"
                    }
                }
            ],
            "outputs": [
                {
                    "name": "emails",
                    "type": "object",
                    "is_array": true,
                    "description": "List of matching emails",
                    "required": true,
                    "schema": {
                        "type": "object",
                        "fields": {
                            "id": {
                                "type": "string",
                                "description": "Email ID"
                            },
                            "thread_id": {
                                "type": "string",
                                "description": "Thread ID"
                            },
                            "subject": {
                                "type": "string",
                                "description": "Email subject"
                            },
                            "from": {
                                "type": "string",
                                "description": "Sender email"
                            },
                            "to": {
                                "type": "string",
                                "is_array": true,
                                "description": "Recipient emails"
                            },
                            "date": {
                                "type": "string",
                                "format": "date-time",
                                "description": "Email date"
                            },
                            "snippet": {
                                "type": "string",
                                "description": "Email preview"
                            },
                            "labels": {
                                "type": "string",
                                "is_array": true,
                                "description": "Email labels"
                            }
                        }
                    }
                },
                {
                    "name": "count",
                    "type": "number",
                    "description": "Total number of matching emails",
                    "required": true,
                    "schema": {
                        "type": "number",
                        "description": "Count of matching emails"
                    }
                }
            ]
        },
        {
            "id": "extract",
            "name": "extract",
            "description": "Extract specific information from items using extraction functions. Works with single items or lists.",
            "category": "data_processing",
            "parameters": [
                {
                    "name": "items",
                    "required": true,
                    "description": "List of items to process",
                    "schema": {
                        "type": "object",
                        "is_array": true
                    }
                },
                {
                    "name": "extraction_function",
                    "required": true,
                    "description": "Function or prompt describing what to extract (e.g., 'extract sentiment and key topics')",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "name": "extraction_fields",
                    "required": true,
                    "description": "List of field names to extract (e.g., ['sentiment', 'topics', 'priority'])",
                    "schema": {
                        "type": "string",
                        "is_array": true
                    }
                },
                {
                    "name": "batch_process",
                    "required": false,
                    "description": "Whether to process as a batch (true) or individual items (false)",
                    "schema": {
                        "type": "boolean",
                        "default": true
                    }
                }
            ],
            "outputs": [
                {
                    "name": "extractions",
                    "description": "List of item ID and extraction pairs",
                    "required": true,
                    "schema": {
                        "type": "object",
                        "is_array": true,
                        "fields": {
                            "item_id": {
                                "type": "string"
                            },
                            "original_item": {
                                "type": "object"
                            },
                            "extraction": {
                                "type": "object"
                            }
                        }
                    }
                },
                {
                    "name": "extraction_stats",
                    "description": "Statistics about the extraction process",
                    "required": true,
                    "schema": {
                        "type": "object",
                        "fields": {
                            "total_processed": {
                                "type": "number"
                            },
                            "successful": {
                                "type": "number"
                            },
                            "failed": {
                                "type": "number"
                            }
                        }
                    }
                }
            ],
            "examples": [
                {
                    "description": "Extract sentiment and topics from emails",
                    "input": {
                        "items": [
                            {
                                "id": "email_123",
                                "subject": "Great news!",
                                "body": "We exceeded our goals..."
                            }
                        ],
                        "extraction_function": "Analyze each email and extract sentiment (positive/negative/neutral), main topics discussed, and priority level (high/medium/low)",
                        "extraction_fields": [
                            "sentiment",
                            "topics",
                            "priority"
                        ],
                        "batch_process": true
                    }
                }
            ]
        },
        {
            "id": "update_augment",
            "name": "update_augment",
            "description": "Apply updates or augmentations to a list of items",
            "category": "data_processing",
            "parameters": [
                {
                    "name": "items",
                    "required": true,
                    "description": "List of items to update",
                    "schema": {
                        "type": "object",
                        "is_array": true
                    }
                },
                {
                    "name": "updates",
                    "required": false,
                    "description": "List of updates to apply to specific items",
                    "schema": {
                        "type": "object",
                        "is_array": true,
                        "fields": {
                            "item_id": {
                                "type": "string"
                            },
                            "update_data": {
                                "type": "object"
                            }
                        }
                    }
                },
                {
                    "name": "augmentation_rules",
                    "required": false,
                    "description": "Rules for augmenting all items with computed fields",
                    "schema": {
                        "type": "object",
                        "is_array": true,
                        "fields": {
                            "field_name": {
                                "type": "string"
                            },
                            "computation": {
                                "type": "string"
                            },
                            "apply_to_all": {
                                "type": "boolean",
                                "default": true
                            }
                        }
                    }
                }
            ],
            "outputs": [
                {
                    "name": "updated_items",
                    "required": true,
                    "description": "Items with updates and augmentations applied",
                    "schema": {
                        "type": "object",
                        "is_array": true
                    }
                },
                {
                    "name": "update_stats",
                    "description": "Statistics about the update process",
                    "required": true,
                    "schema": {
                        "type": "object",
                        "fields": {
                            "items_updated": {
                                "type": "number"
                            },
                            "items_augmented": {
                                "type": "number"
                            },
                            "errors": {
                                "type": "number"
                            }
                        }
                    }
                }
            ],
            "examples": [
                {
                    "description": "Add categories and processing timestamps to analyzed emails",
                    "input": {
                        "items": [
                            {
                                "item_id": "email_123",
                                "sentiment": "positive",
                                "priority": "high"
                            }
                        ],
                        "updates": [
                            {
                                "item_id": "email_123",
                                "update_data": {
                                    "category": "urgent"
                                }
                            }
                        ],
                        "augmentation_rules": [
                            {
                                "field_name": "processed_date",
                                "computation": "current_timestamp",
                                "apply_to_all": true
                            },
                            {
                                "field_name": "category",
                                "computation": "if priority='high' then 'business_critical' else 'standard'",
                                "apply_to_all": true
                            }
                        ]
                    }
                }
            ]
        },
        {
            "id": "map_reduce_rollup",
            "name": "map_reduce_rollup",
            "description": "Group objects by rules and apply rollup functions to create aggregated results",
            "category": "data_analysis",
            "parameters": [
                {
                    "name": "items",
                    "required": true,
                    "description": "List of objects to group",
                    "schema": {
                        "type": "object",
                        "is_array": true
                    }
                },
                {
                    "name": "group_by_rule",
                    "required": true,
                    "description": "Rule for grouping objects (e.g., 'date(timestamp)', 'sender', 'category')",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "name": "rollup_functions",
                    "required": true,
                    "description": "Aggregation functions to apply to each group",
                    "schema": {
                        "type": "object"
                    }
                },
                {
                    "name": "sort_by",
                    "required": false,
                    "description": "Field to sort results by",
                    "schema": {
                        "type": "string",
                        "default": "group_key"
                    }
                },
                {
                    "name": "sort_direction",
                    "required": false,
                    "description": "Sort direction",
                    "schema": {
                        "type": "string",
                        "enum": [
                            "asc",
                            "desc"
                        ],
                        "default": "asc"
                    }
                }
            ],
            "outputs": [
                {
                    "name": "grouped_results",
                    "required": true,
                    "description": "Aggregated results for each group",
                    "schema": {
                        "type": "object",
                        "is_array": true,
                        "fields": {
                            "group_key": {
                                "type": "string"
                            },
                            "group_value": {
                                "type": "primitive"
                            },
                            "aggregated_data": {
                                "type": "object"
                            }
                        }
                    }
                },
                {
                    "name": "rollup_stats",
                    "required": true,
                    "description": "Overall statistics about the rollup operation",
                    "schema": {
                        "type": "object",
                        "fields": {
                            "total_groups": {
                                "type": "number"
                            },
                            "total_items_processed": {
                                "type": "number"
                            },
                            "avg_group_size": {
                                "type": "number"
                            }
                        }
                    }
                }
            ],
            "examples": [
                {
                    "description": "Group emails by date and calculate daily statistics",
                    "input": {
                        "items": [
                            {
                                "timestamp": "2024-01-15T10:30:00Z",
                                "sentiment": 0.8,
                                "sender": "user@company.com",
                                "topics": [
                                    "meetings"
                                ]
                            }
                        ],
                        "group_by_rule": "date(timestamp)",
                        "rollup_functions": {
                            "email_count": "count",
                            "avg_sentiment": "avg(sentiment_score)",
                            "unique_senders": "count_distinct(sender)",
                            "topics": "collect_unique(topics)"
                        },
                        "sort_by": "group_value",
                        "sort_direction": "asc"
                    }
                }
            ]
        },
        {
            "id": "summarize",
            "name": "summarize",
            "description": "Create summaries of content based on specific summarization mandates",
            "category": "data_processing",
            "parameters": [
                {
                    "name": "content",
                    "required": true,
                    "description": "Content to summarize (can be text, structured data, or mixed)",
                    "schema": {
                        "type": "object"
                    }
                },
                {
                    "name": "summarization_mandate",
                    "required": true,
                    "description": "Specific instructions for how to summarize (e.g., 'Create executive summary focusing on key metrics and trends')",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "name": "summary_type",
                    "required": false,
                    "description": "Type of summary to generate",
                    "schema": {
                        "type": "string",
                        "enum": [
                            "executive",
                            "detailed",
                            "bullet_points",
                            "narrative",
                            "statistical"
                        ],
                        "default": "executive"
                    }
                },
                {
                    "name": "target_length",
                    "required": false,
                    "description": "Target length of the summary",
                    "schema": {
                        "type": "string",
                        "enum": [
                            "brief",
                            "medium",
                            "comprehensive"
                        ],
                        "default": "medium"
                    }
                },
                {
                    "name": "focus_areas",
                    "required": false,
                    "description": "Specific areas to focus on in the summary",
                    "schema": {
                        "type": "string",
                        "is_array": true
                    }
                }
            ],
            "outputs": [
                {
                    "name": "summary",
                    "required": true,
                    "description": "Generated summary with metadata",
                    "schema": {
                        "type": "object",
                        "fields": {
                            "title": {
                                "type": "string"
                            },
                            "content": {
                                "type": "string"
                            },
                            "key_points": {
                                "type": "string",
                                "is_array": true
                            },
                            "recommendations": {
                                "type": "string",
                                "is_array": true
                            },
                            "metadata": {
                                "type": "object",
                                "fields": {
                                    "summary_type": {
                                        "type": "string"
                                    },
                                    "word_count": {
                                        "type": "number"
                                    },
                                    "created_at": {
                                        "type": "string",
                                        "format": "date-time"
                                    }
                                }
                            }
                        }
                    }
                }
            ],
            "examples": [
                {
                    "description": "Create executive summary of daily email statistics",
                    "input": {
                        "content": {
                            "daily_stats": [
                                {
                                    "date": "2024-01-15",
                                    "email_count": 12,
                                    "avg_sentiment": 0.7
                                },
                                {
                                    "date": "2024-01-16",
                                    "email_count": 8,
                                    "avg_sentiment": 0.8
                                }
                            ]
                        },
                        "summarization_mandate": "Create an executive summary highlighting email volume trends, sentiment patterns, and key topics discussed over the analyzed period",
                        "summary_type": "executive",
                        "target_length": "medium",
                        "focus_areas": [
                            "volume trends",
                            "sentiment analysis",
                            "key topics"
                        ]
                    }
                }
            ]
        }
    ]
}